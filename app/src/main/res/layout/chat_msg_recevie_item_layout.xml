<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/chat_receive_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@mipmap/head"
        android:id="@+id/user_header_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/user_info"
        android:layout_toEndOf="@+id/user_header_img"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:background="#ccc"
            android:id="@+id/user_title"
            android:layout_width="20dp"
            android:layout_height="5dp" />
        <TextView
            android:id="@+id/user_name"
            android:text="飞翔的企鹅"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <RelativeLayout
        android:layout_margin="15dp"
        android:id="@+id/msg_content"
        android:layout_below="@id/user_info"
        android:layout_toEndOf="@id/user_header_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="爱的司法局撒地方接收到垃圾分类四大金粉世家代付款爱的司法局撒地方接收到垃圾分类四大金粉世家代付款"
            android:background="@drawable/chat_msg_receive_bg"/>
    </RelativeLayout>

</RelativeLayout>