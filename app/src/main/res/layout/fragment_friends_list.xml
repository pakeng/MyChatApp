<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ddd"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/friend_list_header_content"
        android:background="#ddd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/friend_list_header_search_content"
            android:layout_margin="10dp"
            android:background="@drawable/text_lable_border_black_cor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/friend_list_header_search_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eee"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/icon_search"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/friend_list_header_search_content"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="10dp"
                    android:text="新朋友"
                    android:singleLine="true"
                    android:background="@drawable/text_lable_border_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="-1dp"
                    android:padding="10dp"
                    android:text="新建群组"
                    android:singleLine="true"
                    android:background="@drawable/text_lable_border_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
    <include layout="@layout/friend_page_tab" />
<android.support.v4.view.ViewPager
    android:background="#fff"
    android:layout_below="@id/page_tab_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
</android.support.v4.view.ViewPager>
</RelativeLayout>